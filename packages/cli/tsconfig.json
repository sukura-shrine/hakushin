{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "package.json"
  ]
}
